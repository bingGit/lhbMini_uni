/** 订单界面 */

/** 根布局 */
page {
  width: 100%;
  height: 100%;
  background: #f8f8f9;
}

/** 单个根布局 */
.singleRoot {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: horizontal;
  -webkit-box-direction: reverse;
  -webkit-flex-direction: row-reverse;
          flex-direction: row-reverse;
  padding: 80rpx 32rpx;
  border-bottom: #efefef 1rpx solid;
}

/** 单个价格 */
.singlePrice {
  color: #3075C6;
  min-width: 200rpx;
  font-size: 50rpx;
  height: 100%;
  text-align: right;
  -webkit-align-self: center;
          align-self: center;
}

/** 单个描述内容 */
.singleDescRoot {
  width: 100%;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
          flex-direction: column;
  margin-right: 8rpx;
}

/** 单个标题 */
.singleTitle {
  color: #333;
  font-size: 40rpx;
}

/** 单个时间 */
.singleTime {
  color: #999;
  font-size: 24rpx;
  margin-top: 20rpx;
}

/** 优惠券根布局 */
.couponRoot {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: horizontal;
  -webkit-box-direction: reverse;
  -webkit-flex-direction: row-reverse;
          flex-direction: row-reverse;
  padding: 44rpx 32rpx;
}

/** 优惠券向下 */
.couponNext {
  width: 24rpx;
  height: 30rpx;
  -webkit-align-self: center;
          align-self: center;
}

/** 优惠价格 */
.couponPrice {
  color: #ff5534;
  font-size: 28rpx;
}

/** 优惠标题 */
.couponTitle {
  color: #333;
  font-size: 28rpx;
  margin-right: 14rpx;
}

/** 实际价格 */
.realPrice {
  color: #3075C6;
  font-size: 32rpx;
  margin-top: 150rpx;
  text-align: center;
}

/** 确认支付 */
.confirmPay {
  color: white;
  background: #3075C6;
  height: 100rpx;
  margin: 60rpx 32rpx;
  border-radius: 10rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
}

/** 单个根布局 */
.multiRoot {
  padding: 60rpx 32rpx;
}

/** 单个描述内容 */
.multiLine {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: horizontal;
  -webkit-box-direction: normal;
  -webkit-flex-direction: row;
          flex-direction: row;
}

/** 单个价格 */
.multiPrice {
  color: #ff5534;
  font-size: 40rpx;
  margin-left: 10rpx;
}

/** 单个价格 */
.orderChoice {
  height: 80rpx;
  width: 80rpx;
  min-height: 80rpx;
  min-width: 80rpx;
  -webkit-align-self: center;
          align-self: center;
}

