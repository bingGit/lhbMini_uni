/** 模态 **/
.modal {
  position: fixed;
  top: 0rpx;
  left: 0rpx;
  right: 0rpx;
  bottom: 0rpx;
  width: 100%;
  height: 100%;
  z-index: 1000;
}
.modal-mask {
  position: absolute;
  width: 100%;
  height: 100%;
  z-index: 97;
  background-color: rgba(0, 0, 0, 0.30);
}
.modal-layer-sm {
  width: 60%;
  -webkit-transform: translate3d(-50%, -50%, 0);
          transform: translate3d(-50%, -50%, 0);
  left: 50%;
}
.modal-layer-md {
  width: 80%;
  -webkit-transform: translate3d(-50%, -50%, 0);
          transform: translate3d(-50%, -50%, 0);
  left: 50%;
}
.modal-layer-la {
  width: 92%;
  -webkit-transform: translate3d(-50%, -50%, 0);
          transform: translate3d(-50%, -50%, 0);
  left: 50%;
}
.modal-layer-full {
  width: 100%;
  left: 0;
}
.modal-layer-radius {
}
.modal-layer {
  position: absolute;
  background: #fff;
  /* background: transparent; */
  top: 50%;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
          flex-direction: column;
  z-index: 98;
  -webkit-box-shadow: 0 4rpx 14rpx rgba(0, 0, 0, 0.4);
          box-shadow: 0 4rpx 14rpx rgba(0, 0, 0, 0.4);
  border-radius: 10rpx 10rpx 10rpx 10rpx;
}
.modal-body {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
          flex: 1;
}
.modal-footer {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: horizontal;
  -webkit-box-direction: normal;
  -webkit-flex-direction: row;
          flex-direction: row;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
}
.modal-close {
  color: #fff;
  font-size: 48rpx;
  position: absolute;
  right: 40rpx;
  top: 0;
  z-index: 98;
}

