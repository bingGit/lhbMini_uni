/** 支付界面 */
page {
  width: 100%;
  height: 100%;
  background: #f8f8f9;
}
.dealRoot {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
          flex-direction: column;
  padding-bottom: 160rpx;
}
.dealTitle {
  color: #4084ec;
  font-size: 40rpx;
  -webkit-align-self: center;
          align-self: center;
  margin: 70rpx 0rpx 0rpx 0rpx;
}
.dealResult {
  margin: 30rpx 40rpx 0rpx 40rpx;
  color: #666;
  font-size: 24rpx;
  max-width: 600rpx;
  line-height: 26rpx;
  text-align: center;
}
.dealLine {
  background: #efefef;
  width: 690rpx;
  height: 1rpx;
  margin: 60rpx 30rpx;
  -webkit-align-self: center;
          align-self: center;
}
.dealPoint {
  padding: 15rpx 30rpx;
}
.dealPointTitle {
  color: #222;
  font-size: 28rpx;
}
.dealPointIntro {
  color: #666;
  font-size: 28rpx;
}

/** 确认支付 */
.confirmPay {
  color: white;
  width: 100%;
  background: #3075C6;
  height: 100rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
          flex-direction: column;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  position: fixed;
  bottom: 0rpx;
  right: 0rpx;
}
.bottomTitle {
  font-size: 32rpx;
}
.bottomIntro {
  font-size: 24rpx;
  margin-top: 6rpx;
}

