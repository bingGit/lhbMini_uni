/** 支付界面 */
page {
  width: 100%;
  height: 100%;
  background: #f8f8f9;
}
.payRoot {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
          flex-direction: column;
  padding: 32rpx;
}
.payTitle {
  color: #222;
  font-size: 48rpx;
  -webkit-align-self: center;
          align-self: center;
}
.payNumber {
  color: #666;
  font-size: 28rpx;
  margin-top: 20rpx;
  -webkit-align-self: center;
          align-self: center;
}
.payAllPrice {
  color: #333;
  font-size: 30rpx;
  margin-top: 80rpx;
}
.payRealPrice {
  color: #3075C6;
  font-size: 30rpx;
  margin-top: 20rpx;
}

/** 确认支付 */
.confirmPay {
  color: white;
  background: #3075C6;
  height: 100rpx;
  margin: 200rpx 0rpx;
  border-radius: 10rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
}

